<!DOCTYPE html>
<html>
<head>
  <title>Friendmake</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,600' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Cantata+One' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Playfair+Display+SC:400,700' rel='stylesheet' type='text/css'>
  <script type="text/javascript"></script>
 
  <%= stylesheet_link_tag "bootstrap"    %>

    <!-- Custom styles for this template -->
    
    <%= stylesheet_link_tag    "style" %>
    <%= stylesheet_link_tag    "font-awesome.min" %>
    <%= stylesheet_link_tag    "jquery.fancybox" %>

  <%= csrf_meta_tags %>
  <%= yield :head %>
</head>
 <body data-spy="scroll" data-offset="0" data-target="#theMenu">

  <nav class="menu" id="theMenu">
    <div class="menu-wrap">
      <h1 class="logo"><a href="index.html#home">FRIENDMAKE</a></h1>
      <i class="fa fa-times menu-close"></i>
      <a href="#home" class="smoothScroll">Home</a>
      <a href="#makes" class="smoothScroll">Makes</a>
      <a href="#profile" class="smoothScroll">Your Profile</a>
      <a href="#about" class="smoothScroll">About</a>
      <a href="#contact" class="smoothScroll">Contact</a>
      <a href="#"><i class="fa fa-facebook"></i></a>
      <a href="#"><i class="fa fa-twitter"></i></a>
      <a href="#"><i class="fa fa-dribbble"></i></a>
      <a href="#"><i class="fa fa-envelope"></i></a>
    </div>
    
    <!-- Menu button -->
    <div id="menuToggle"><i class="fa fa-bars"></i></div>
  </nav>

<div class="container-fluid center-block">
	<p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
<%= yield %>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
  <%= javascript_include_tag "classie"  %>
  <%= javascript_include_tag "classie"  %>
  <%= javascript_include_tag "smoothscroll"  %>
  <%= javascript_include_tag "jquery.stellar.min"  %>
  <%= javascript_include_tag "jquery.fancybox"  %>  
  <%= javascript_include_tag "main"  %>
    <script>
    $(function(){
      $.stellar({
        horizontalScrolling: false,
        verticalOffset: 40
      });
    });
    </script>

    <script src="geoPosition.js"></script>
    
    <script type="text/javascript">
      $(function() {
        //    fancybox
          jQuery(".fancybox").fancybox();
      });
     </script>
</body>
</html>
